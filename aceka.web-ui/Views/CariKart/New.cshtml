                            <label for="satin_alma_sorumlu_carikart_id">Satınalma Sorumlusu*</label>
                            <input type="text" class="form-control" name="satin_alma_sorumlu_carikart_id" id="satin_alma_sorumlu_carikart_id" value="">
                        </div>
                        <div class="form-group col-sm-12">
                            <label for="satis_sorumlu_carikart_id">Satış Sorumlusu*</label>
                            <input type="text" class="form-control" name="satis_sorumlu_carikart_id" id="satis_sorumlu_carikart_id" value="">
