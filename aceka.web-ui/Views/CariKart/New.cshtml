                           ilceControlId: 'ilce_id',
                           semtControlId: 'semt_id',
                           ulkeControl2Id: 'irs_ulke_id',
                           sehirControl2Id: 'irs_sehir_id',
                           ilceControl2Id: 'irs_ilce_id',
                           semtControl2Id: 'irs_semt_id',
                       }
                   });
            carikartlar.get.init(0);

            //Fatura Adresi Kısmı
            parametre.ulke_sehir_ilce_semt.ulkeler('ulke_id'); //Ülke select ini dolduruyor.

            //İrsaliye Adresi Kısmı
