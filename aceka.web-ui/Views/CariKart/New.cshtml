    </section>
    <!--Search elements-->
    <!--Tab elements-->
    <section class="content heightAuto nPadding-bottom">
        <div class="row">
            <div class="col-md-12">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs xsFont">
                        <li class="active"><a href="#iletisim" data-toggle="tab">İletişim Bilgileri</a></li>
                        <li><a href="#finans" data-toggle="tab">Finans Bilgileri</a></li>
                        <li><a href="#rapor" data-toggle="tab">Rapor Parametreleri</a></li>
                        <li><a href="#ozelalanlar" data-toggle="tab">Özel Alanlar</a></li>
                        <li><a href="#sube" data-toggle="tab">Şube Listesi</a></li>
                        <li><a href="#posta" data-toggle="tab">E-Posta Grubu</a></li>

                    </ul>
                    <div class="tab-content">
                        <!--_iletisim-->
                        @Html.Partial("_iletisim")
