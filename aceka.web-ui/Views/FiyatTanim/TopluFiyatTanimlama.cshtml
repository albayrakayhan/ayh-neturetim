
@{
    ViewBag.Title = "TopluFiyatTanimlama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*container-fluid*@

<center>
    <h2>Toplu Fiyat Tanımlama</h2>
</center>
<form id="fiyat">
    <section class="content heightAuto nPadding-bottom">
        <div class="box box-warning" >
            <div class="box-body">

                <div class="row" style="width:100%">

                    <div class="col-lg-4">
                        <div class="col-sm-8">
                            <label style="width:100%">Tarih</label>
                            <input type="date" id="tarih" name="tarih" style="width:100%" />
                        </div>

                        <div class="col-sm-4">
                            <label style="width:100%">Para Birimi </label>
                            <select id="pb" name="pb" class="form-group" style="width:100%">
                                <option value="0">TL</option>
                                <option value="0">$</option>
                                <option value="0">EUR</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="col-sm-12">
                            <label style="width:100%">Fasoncu</label>
                            <select id="carikart_id" name="carikart_id" style="width:100%">
                                <option>Ajara</option>
                                <option>Ajara2</option>
                                <option>Ajara3</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="col-sm-12">
                            <label style="width:100%">Talimat</label>
                            <select id="talimatturu_id" name="talimatturu_id" style="width:100%">
                                <option>Kesim</option>
                                <option>Dikim</option>
                                <option>Yıkama</option>
                            </select>

                            @*<select id="talimatturu_id" name="talimatturu_id" multiple="multiple" class="dropdown">
                            <option value="php">PHP</option>
                            <option value="javascript">JavaScript</option>
                            <option value="java">Java</option>
                            <option value="sql">SQL</option>
                            <option value="jquery">Jquery</option>
                            <option value=".net">.Net</option>
                        </select>*@

                        </div>
                    </div>

                </div>

                <div class="row" style="width:100%">

                    <div class="col-lg-4">
                        <div class="form-group col-sm-12">
                            <label style="width:100%">Fiyat</label>
                            <input type="text" id="fiyat" name="fiyat" style="width:100%" />
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="form-group col-sm-12">
                            <label style="width:95%">Marka</label>
                            <select id="marka" name="marka" style="width:100%">
                                <option>Puma</option>
                                <option>Adidas</option>
                                <option>Lotto</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="form-group col-sm-12">
                            <label style="width:100%">Model Adı - Model No Orjinal Stok Kodu</label>
                            <input type="text" id="urun" name="urun" style="width:100%">
                        </div>
                    </div>
                </div>

                <div class="row" style="width:100%">
                    <div class="col-lg-12">
                        <div class="col-sm-12">
                            <label style="width:95%">Açıklama</label>
                            <textarea class="form-group" id="aciklama" name="aciklama" style="width:100%"></textarea>
                            @*<input type="text" class="form-group" id="aciklama" name="aciklama" style="width:100%" />*@
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">
                    </div>

                    <div class="col-lg-6">
                        <div class="col-sm-12">
                            <button type="button" class="btn btn-primary" style="width:48%">Listele</button>
                            <button type="submit" class="btn btn-primary" style="width:48%">Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</form>

