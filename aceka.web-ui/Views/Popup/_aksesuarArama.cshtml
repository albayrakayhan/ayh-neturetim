<script src="@Url.Content("~/assets/dist/js/aceka.stokkart.js")"></script>
<script src="@Url.Content("~/assets/dist/js/aceka.stokkart.autocomplate.js")"></script>
<script>

    $(function () {
        parametre.init(
            {
                select: {
                    stokkartTipControlId: 'stokKartTipi',  //stok kart tipi  select' ini dolduruyoruz.
                    calback: function () {
                        $("#stokKartTipi option").each(function (i, element) {
                            if ($(element).val() != 21) {
                                $(element).attr("disabled", true);
                            }
                            else {
                                $(element).attr("selected", "selected");
                                $("#stokKartTipi").attr("disabled", true);
                            }
                        });
                    }
                }
            });

    });
    stokkartilkMadde.search.init();
</script>
