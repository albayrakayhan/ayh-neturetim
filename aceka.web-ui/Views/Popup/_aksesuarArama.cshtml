<!--Search elements-->
<form id="Export">
    <section class="content heightAuto nPadding-bottom">
        <div class="box box-primary">
            <div class="box-body">
                <div class="row">
                    <div class="form-group col-md-2">
                        <label for="stokKodu">Stok Kodu*</label>
                        <input type="text" class="form-control ui-front" id="stokKodu" name="stokKodu" placeholder="Stok Kodu">
                        <i class="fa fa-fw fa-search" style="position:absolute;right:20px;top :28px;"></i>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="modelAdi">Model Adı*</label>
                        <input type="text" class="form-control" id="modelAdi" name="modelAdi" placeholder="Model Adı">
                        <i class="fa fa-fw fa-search" style="position:absolute;right:20px;top :28px;"></i>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="orjAdi">ORJ Adı*</label>
                        <input type="text" class="form-control" id="orjSNo" name="orjSNo" placeholder="orjStokNo Adı">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="orjSNo">Orjinal No</label>
                        <input type="text" class="form-control" id="orjinal_stok_kodu" name="orjStokNo" placeholder="Orjinal Stok No">
                    </div>
                    <div class="form-group col-md-2">
                        <label>Stok Kartı Tipleri</label>
                        <select class="form-control" name="stokKartTipi" id="stokKartTipi"></select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-1" style="float:right">
                        <button type="button" class="btn btn-info pull-right searchBtn aramaBtn2">Ara</button>
                    </div>
                    <span class="col-sm-12 pull-right xsFont red">Lütfen (*) Alanları Doldurunuz!</span>
                </div>
            </div>
        </div>

    </section>
    <!--Search elements-->
    <!--table elements-->
    <section class="content heightAuto nPadding-bottom nPadding-top">
        <div class="box box-danger">
            <div class="box-body">
                    <table id="stokKart" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Stok Kodu</th>
                                <th>Stok Adı</th>
                                <th>Stok Tipi</th>
                                <th>Stok Türü</th>
                                <th>Statü</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                    </table>
            </div>
        </div>
    </section>
</form>
